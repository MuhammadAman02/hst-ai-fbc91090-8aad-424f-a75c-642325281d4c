# Application Settings
APP_NAME="ProjectBase"
APP_DESCRIPTION="A modern Python web application template"
APP_VERSION="0.1.0"

# Server Settings
HOST="0.0.0.0"  # Use 0.0.0.0 for production/Fly.io
PORT=8000
API_PREFIX="/api"
DEBUG=true  # Set to false in production

# CORS Settings
# Comma-separated list of origins, e.g.: http://localhost:3000,https://example.com
CORS_ORIGINS="http://localhost:8000,http://localhost:3000"

# Security Settings
# Generate a secure key with: openssl rand -hex 32
SECRET_KEY="replace_this_with_a_secure_random_key_at_least_32_characters_long"
ALGORITHM="HS256"  # JWT algorithm
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Settings (if using SQLAlchemy)
# DATABASE_URL="sqlite:///./app.db"  # SQLite
# DATABASE_URL="postgresql://user:password@localhost/dbname"  # PostgreSQL

# Logging Settings
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=false
LOG_FILE="logs/app.log"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Path Settings
STATIC_DIR="app/static"
TEMPLATES_DIR="app/templates"